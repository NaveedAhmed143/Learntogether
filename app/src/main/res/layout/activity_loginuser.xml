<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".Loginuser">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal">
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:orientation="horizontal"
        android:padding="5dp">



        />
        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="130dp"
            android:layout_margin="5dp"
            android:layout_marginRight="10dp"
            android:elevation="5dp"
            app:cardBackgroundColor="#FAFA"
            app:cardCornerRadius="5dp">

            <ImageView
                android:id="@+id/messagee"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="@drawable/chat" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="105dp"
                android:fontFamily="cursive"
                android:text="Messages"
                android:textSize="18sp" />
        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="130dp"
            android:layout_margin="5dp"
            app:cardBackgroundColor="#34e7e4">

            <ImageView
                android:id="@+id/invitetutor"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="@drawable/invite" />

            <TextView
                android:id="@+id/info_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="100dp"
                android:fontFamily="cursive"
                android:text="Invite Tutor"
                android:textColor="#000"
                android:textSize="18sp" />
        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="130dp"
            android:layout_margin="5dp"
            app:cardBackgroundColor="#3882d6">

            <ImageView
                android:id="@+id/mytutor"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="@drawable/tutorr" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="100dp"
                android:fontFamily="cursive"
                android:gravity="center"
                android:text=" My Tutor"
                android:textColor="#000000"
                android:textSize="18sp" />
        </androidx.cardview.widget.CardView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="10dp"
        android:padding="5dp"
        >


        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="130dp"
            android:layout_margin="5dp"
            android:elevation="5dp"
            app:cardBackgroundColor="#a29bfe"
            app:cardCornerRadius="5dp">

            <ImageView
                android:id="@+id/findtutor"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="@drawable/searchr" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="100dp"
                android:fontFamily="cursive"
                android:text="Find Tutor"
                android:textSize="18sp" />
        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="130dp"
            android:layout_margin="5dp"
            app:cardBackgroundColor="#fdcb6e">

            <ImageView
                android:id="@+id/recommended"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="@drawable/quality" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="100dp"
                android:fontFamily="cursive"
                android:text="Recommended"
                android:textColor="#000"
                android:textSize="18sp" />
        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="130dp"
            android:layout_margin="5dp"
            app:cardBackgroundColor="#ff7675">

            <ImageView
                android:id="@+id/classroom"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="@drawable/classroom" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="100dp"
                android:fontFamily="cursive"
                android:text="Class Room"
                android:textColor="#000000"
                android:textSize="18sp" />
        </androidx.cardview.widget.CardView>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:padding="5dp"
        android:orientation="horizontal">


        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="130dp"
            android:layout_margin="5dp"
            android:elevation="5dp"
            app:cardBackgroundColor="#20E834"
            app:cardCornerRadius="5dp"
            >

            <ImageView
                android:id="@+id/share"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:onClick="ShareAppwithusers"
                android:background="@drawable/sharemail" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="107dp"
                android:fontFamily="cursive"
                android:text="Share"
                android:textColor="#000000"
                android:textSize="18sp" />
        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="130dp"
            android:layout_margin="5dp"
            android:elevation="5dp"
            app:cardBackgroundColor="#E8E817"
            app:cardCornerRadius="5dp"
            >

            <ImageView
                android:id="@+id/update"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="@drawable/update" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="107dp"
                android:fontFamily="cursive"
                android:text="UpdateProfile"
                android:textColor="#000000"
                android:textSize="18sp" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="130dp"
            android:layout_margin="5dp"
            android:elevation="5dp"
            app:cardBackgroundColor="#55efc4"
            app:cardCornerRadius="5dp"
            >

            <ImageView
                android:id="@+id/setting"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="@drawable/settingsgears" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="107dp"
                android:fontFamily="cursive"
                android:text="Settings"
                android:textColor="#000000"
                android:textSize="18sp" />
        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:padding="5dp"
        android:orientation="horizontal">


        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="130dp"
            android:layout_margin="5dp"
            android:elevation="5dp"
            app:cardBackgroundColor="#F52757"
            app:cardCornerRadius="5dp"
            >

            <ImageView
                android:id="@+id/Location"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="@drawable/placeholder"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="107dp"
                android:fontFamily="cursive"
                android:text="Locatoin"
                android:textColor="#000000"
                android:textSize="18sp" />
        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="130dp"
            android:layout_margin="5dp"
            android:elevation="5dp"
            app:cardBackgroundColor="#270FFF"
            app:cardCornerRadius="5dp"
            >

            <ImageView
                android:id="@+id/planandpricing"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="@drawable/money"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="107dp"
                android:fontFamily="cursive"
                android:text="Plan And Pricing"
                android:textColor="#000000"
                android:textSize="18sp" />
        </androidx.cardview.widget.CardView>



        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="130dp"
            android:layout_margin="5dp"
            android:elevation="5dp"
            app:cardBackgroundColor="#FFCE6B"
            app:cardCornerRadius="5dp"
            >

            <ImageView
                android:id="@+id/logout"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="@drawable/logout"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="107dp"
                android:fontFamily="cursive"
                android:text="Logout"
                android:textColor="#000000"
                android:textSize="18sp" />
        </androidx.cardview.widget.CardView>



    </LinearLayout>






</LinearLayout>