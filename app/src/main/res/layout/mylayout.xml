<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/tools"
    android:orientation="vertical"
    xmlns:card_view="http://schemas.android.com/apk/res-auto">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="#FAA"
        android:showDividers="end"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_margin="5dp"
            app:cardUseCompatPadding="true"
            app:cardElevation="6dp"
            app:cardCornerRadius="3dp"
            android:paddingTop="50dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="100dp"
            android:background="#DB0065"
            android:padding="20dp"
            android:scrollbars="vertical"
            card_view:cardBackgroundColor='#ffffff'
            card_view:cardCornerRadius="8dp"
            card_view:cardElevation="100dp">

            <LinearLayout
                android:id="@+id/cardviewlayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/imageView"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="10dp"
                    android:padding="25dp"
                    android:scaleType="centerCrop" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/textName"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignBottom="@+id/imageView"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_marginBottom="20dp"
                        android:layout_toRightOf="@+id/imageView"
                        android:fontFamily="cursive"
                        android:gravity="center|left|top"
                        android:layout_marginTop="15dp"
                        android:maxLength="30"
                        android:layout_marginLeft="10dp"
                        android:text="menu name"
                        android:textStyle="bold"
                        android:textColor="#2b439a"
                        android:textColorHighlight="#2b439a"
                        android:textSize="18sp" />


                    <TextView
                        android:id="@+id/Txtnation"
                        android:layout_width="110dp"
                        android:layout_height="wrap_content"
                        android:layout_alignLeft="@+id/textName"
                        android:layout_alignBottom="@+id/imageView"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_toRightOf="@+id/textName"
                        android:fontFamily="cursive"
                        android:maxLength="30"
                        android:padding="14dp"
                        android:shadowColor="#2b439a"
                        android:text="655646546"
                        android:textColor="#b163a3"
                        android:textColorHighlight="#2b439a"
                        android:textColorHint="#2b439a"
                        android:textSize="14dp" />

                </LinearLayout>


            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="60dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="100dp"
                        android:paddingLeft="0dp"
                        android:text="Gender"
                        android:textColor="#2CB308" />

                    <TextView
                        android:id="@+id/Genderforrecomendedtutor"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="100dp"
                        android:paddingLeft="55dp"
                        android:text="Gender"
                        android:textColor="#2CB308" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:paddingLeft="0dp"
                        android:text="Languages"
                        android:textColor="#2CB308" />

                    <TextView
                        android:id="@+id/Languagesforrecomendedtutor"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:paddingLeft="33dp"
                        android:text="Gender"
                        android:textColor="#2CB308" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:paddingLeft="0dp"
                        android:text="Teaches"
                        android:textColor="#2CB308" />

                    <TextView
                        android:id="@+id/Teachesforrecomendedtutor"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:paddingLeft="50dp"
                        android:text="Gender"
                        android:textColor="#2CB308" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:paddingLeft="0dp"
                        android:text="Rate Per/Hour"
                        android:textColor="#2CB308" />

                    <TextView
                        android:id="@+id/Perhourateforrecomendedtutor"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:paddingLeft="15dp"
                        android:text="Gender"
                        android:textColor="#2CB308" />

                </LinearLayout>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>
</LinearLayout>